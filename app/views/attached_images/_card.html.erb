<div class="card mb-3">
  <h2 class="card-header h4">
    Attached Image #<%= attached_image.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Image</dt>
      <dd><%= attached_image.image_id %></dd>

      <dt>Response</dt>
      <dd><%= attached_image.response_id %></dd>

      <dt>Question</dt>
      <dd><%= attached_image.question_id %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back attached_image, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_attached_image_url(attached_image), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to attached_image, method: :delete, data: { confirm: "Do you really want to delete this attached_image?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(attached_image.updated_at) %> ago
  </div>
</div>
