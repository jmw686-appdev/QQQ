<% was_validated = attached_image.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(attached_image, html: form_html_options) do |f| %>
  <div class="form-group">
    <% image_id_class = "form-control" %>
    <% image_id_was_invalid = attached_image.errors.include?(:image_id) %>

    <% if was_validated %>
      <% if image_id_was_invalid %>
        <% image_id_class << " is-invalid" %>
      <% else %>
        <% image_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image_id %>

    <%= f.number_field :image_id, class: image_id_class, placeholder: "Enter image" %>
    <% if image_id_was_invalid %>
      <% attached_image.errors.full_messages_for(:image_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% response_id_class = "form-control" %>
    <% response_id_was_invalid = attached_image.errors.include?(:response_id) %>

    <% if was_validated %>
      <% if response_id_was_invalid %>
        <% response_id_class << " is-invalid" %>
      <% else %>
        <% response_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :response_id %>

    <%= f.number_field :response_id, class: response_id_class, placeholder: "Enter response" %>
    <% if response_id_was_invalid %>
      <% attached_image.errors.full_messages_for(:response_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% question_id_class = "form-control" %>
    <% question_id_was_invalid = attached_image.errors.include?(:question_id) %>

    <% if was_validated %>
      <% if question_id_was_invalid %>
        <% question_id_class << " is-invalid" %>
      <% else %>
        <% question_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :question_id %>

    <%= f.number_field :question_id, class: question_id_class, placeholder: "Enter question" %>
    <% if question_id_was_invalid %>
      <% attached_image.errors.full_messages_for(:question_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
