<div class="card mb-3">
  <h2 class="card-header h4">
    Consumption #<%= consumption.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Tool consumer</dt>
      <dd><%= consumption.tool_consumer_id %></dd>

      <dt>Credential</dt>
      <dd><%= consumption.credential_id %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back consumption, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_consumption_url(consumption), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to consumption, method: :delete, data: { confirm: "Do you really want to delete this consumption?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(consumption.updated_at) %> ago
  </div>
</div>
