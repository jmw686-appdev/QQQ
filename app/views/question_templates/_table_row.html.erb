<tr>
  <td>
    <%= question_template.context_id %>
  </td>

  <td>
    <%= question_template.name %>
  </td>

  <td>
    <%= question_template.points_awarded %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to question_template, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_question_template_url(question_template), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to question_template, method: :delete, data: { confirm: "Do you really want to delete this question_template?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
