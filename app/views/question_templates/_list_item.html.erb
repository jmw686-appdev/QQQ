<%= link_to question_template, class: "list-group-item list-group-item-action d-flex align-items-center justify-content-between" do %>
  <div>
    <%= question_template.name.capitalize %> :
    <%= question_template.points_awarded %>

    <small class="text-muted">
      <%= time_ago_in_words(question_template.updated_at) %> ago
    </small>
  </div>

  <span class="btn btn-sm btn-outline-secondary">
    <i class="fas fa-chevron-right fa-fw"></i>
  </span>
<% end %>
