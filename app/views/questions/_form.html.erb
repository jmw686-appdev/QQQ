<% was_validated = question.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(question, html: form_html_options) do |f| %>
  <div class="form-group">
    <% title_class = "form-control" %>
    <% title_was_invalid = question.errors.include?(:title) %>

    <% if was_validated %>
      <% if title_was_invalid %>
        <% title_class << " is-invalid" %>
      <% else %>
        <% title_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :title %>

    <%= f.text_field :title, class: title_class, placeholder: "Enter title" %>
    <% if title_was_invalid %>
      <% question.errors.full_messages_for(:title).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% body_class = "form-control" %>
    <% body_was_invalid = question.errors.include?(:body) %>

    <% if was_validated %>
      <% if body_was_invalid %>
        <% body_class << " is-invalid" %>
      <% else %>
        <% body_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :body %>

    <%= f.text_area :body, class: body_class, placeholder: "Enter body" %>
    <% if body_was_invalid %>
      <% question.errors.full_messages_for(:body).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% enrollment_id_class = "form-control" %>
    <% enrollment_id_was_invalid = question.errors.include?(:enrollment_id) %>

    <% if was_validated %>
      <% if enrollment_id_was_invalid %>
        <% enrollment_id_class << " is-invalid" %>
      <% else %>
        <% enrollment_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :enrollment_id %>

    <%= f.number_field :enrollment_id, class: enrollment_id_class, placeholder: "Enter enrollment" %>
    <% if enrollment_id_was_invalid %>
      <% question.errors.full_messages_for(:enrollment_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% assignment_tag_class = "form-control" %>
    <% assignment_tag_was_invalid = question.errors.include?(:assignment_tag) %>

    <% if was_validated %>
      <% if assignment_tag_was_invalid %>
        <% assignment_tag_class << " is-invalid" %>
      <% else %>
        <% assignment_tag_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :assignment_tag %>

    <%= f.text_field :assignment_tag, class: assignment_tag_class, placeholder: "Enter assignment tag" %>
    <% if assignment_tag_was_invalid %>
      <% question.errors.full_messages_for(:assignment_tag).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-check">
    <% anonymous_to_all_class = "form-check-input" %>
    <% anonymous_to_all_was_invalid = question.errors.include?(:anonymous_to_all) %>

    <% if was_validated %>
      <% if anonymous_to_all_was_invalid %>
        <% anonymous_to_all_class << " is-invalid" %>
      <% else %>
        <% anonymous_to_all_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :anonymous_to_all, class: "form-check-label" do %>
      <%= f.check_box :anonymous_to_all, class: anonymous_to_all_class %> Anonymous to all
    <% end %>
    <% if anonymous_to_all_was_invalid %>
      <% question.errors.full_messages_for(:anonymous_to_all).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-check">
    <% anonymous_to_students_class = "form-check-input" %>
    <% anonymous_to_students_was_invalid = question.errors.include?(:anonymous_to_students) %>

    <% if was_validated %>
      <% if anonymous_to_students_was_invalid %>
        <% anonymous_to_students_class << " is-invalid" %>
      <% else %>
        <% anonymous_to_students_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :anonymous_to_students, class: "form-check-label" do %>
      <%= f.check_box :anonymous_to_students, class: anonymous_to_students_class %> Anonymous to students
    <% end %>
    <% if anonymous_to_students_was_invalid %>
      <% question.errors.full_messages_for(:anonymous_to_students).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-check">
    <% marked_good_by_instructor_class = "form-check-input" %>
    <% marked_good_by_instructor_was_invalid = question.errors.include?(:marked_good_by_instructor) %>

    <% if was_validated %>
      <% if marked_good_by_instructor_was_invalid %>
        <% marked_good_by_instructor_class << " is-invalid" %>
      <% else %>
        <% marked_good_by_instructor_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :marked_good_by_instructor, class: "form-check-label" do %>
      <%= f.check_box :marked_good_by_instructor, class: marked_good_by_instructor_class %> Marked good by instructor
    <% end %>
    <% if marked_good_by_instructor_was_invalid %>
      <% question.errors.full_messages_for(:marked_good_by_instructor).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
