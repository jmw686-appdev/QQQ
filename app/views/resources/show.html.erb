<div class="row justify-content-center mb-3">
  <div class="col-md-8">
    <%= render object: @resource, partial: "card", as: :resource %>
    <div>
      <%= render collection: @resource.questions, partial: "question", as: :question %>
    </div>
    <div class="pt-4">
      <%= form_for @question, remote: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: "form-control", rows: 4 %>
        </div>

        <div class="form-group">
          <%= f.label :assignment_tag %>
          <%= f.text_field :assignment_tag, class: "form-control", placeholder: "Enter assignment tag" %>
        </div>

        <div class="form-check">
          <%= f.label :anonymous_to_students, class: "form-check-label" do %>
            <%= f.check_box :anonymous_to_students, class: "form-check-input" %> Anonymous to students
          <% end %>
        </div>

        <div class="form-check">
          <%= f.label :anonymous_to_all, class: "form-check-label" do %>
            <%= f.check_box :anonymous_to_all, class: "form-check-input" %> Anonymous to all
          <% end %>
        </div>

        <%= f.hidden_field :enrollment_id, value: @enrollment.id %>
        <%= f.submit "Send", class: "btn btn-dark btn-block" %>
      <% end %>
    </div>
  </div>
</div>
