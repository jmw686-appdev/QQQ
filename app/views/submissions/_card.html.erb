<div class="card mb-3">
  <h2 class="card-header h4">
    Submission #<%= submission.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Enrollment</dt>
      <dd><%= submission.enrollment_id %></dd>

      <dt>Resource</dt>
      <dd><%= submission.resource_id %></dd>

      <dt>Score</dt>
      <dd><%= submission.score %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back submission, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_submission_url(submission), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to submission, method: :delete, data: { confirm: "Do you really want to delete this submission?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(submission.updated_at) %> ago
  </div>
</div>
