<tr>
  <td>
    <%= image.source %>
  </td>

  <td>
    <%= image.enrollment_id %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to image, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_image_url(image), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to image, method: :delete, data: { confirm: "Do you really want to delete this image?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
