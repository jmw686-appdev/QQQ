<tr>
  <td>
    <%= required_field.input_type %>
  </td>

  <td>
    <%= required_field.instructions %>
  </td>

  <td>
    <%= required_field.question_template_id %>
  </td>

  <td>
    <%= required_field.options %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to required_field, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_required_field_url(required_field), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to required_field, method: :delete, data: { confirm: "Do you really want to delete this required_field?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
