<%= link_to required_field, class: "list-group-item list-group-item-action d-flex align-items-center justify-content-between" do %>
  <div>
    Required Field #<%= required_field.id %>

    <small class="text-muted">
      <%= time_ago_in_words(required_field.updated_at) %> ago
    </small>
  </div>

  <span class="btn btn-sm btn-outline-secondary">
    <i class="fas fa-chevron-right fa-fw"></i>
  </span>
<% end %>
